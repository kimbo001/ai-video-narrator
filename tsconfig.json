{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    
    /* THE "NO BS" FIXES FOR YOUR LOG ERRORS */
    "strict": false,            // Relax strictness for launch so small type errors don't stop the build
    "allowJs": true,           // Allows you to import .js files (like redis.js) into .ts files
    "checkJs": false,          // Tells TS not to try and "type check" your javascript files
    "noImplicitAny": false,    // Stops the "implicitly has an any type" error in narrate.ts
    
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  /* CRITICAL: Tell TypeScript to look at your API folder too */
  "include": ["src", "api", "api/**/*.ts", "api/**/*.js"]
}
